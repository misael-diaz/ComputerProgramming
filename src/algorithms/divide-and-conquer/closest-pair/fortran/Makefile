include make-inc

all: $(TESTS)

$(MAIN_EXE): $(OBJECTS)
	$(FC) $(FCOPT) $(OBJECTS) -o $(MAIN_EXE)

$(ALGORITHMS_OBJ): $(ALGORITHMS_FOR)
	$(FC) $(FCOPT) -c $(ALGORITHMS_FOR) -o $(ALGORITHMS_OBJ)

$(POINT_CLASS_OBJ): $(ALGORITHMS_FOR) $(POINT_CLASS_FOR)
	$(FC) $(FCOPT) -c $(POINT_CLASS_FOR) -o $(POINT_CLASS_OBJ)

$(PAIR_CLASS_OBJ): $(ALGORITHMS_FOR) $(POINT_CLASS_FOR) $(PAIR_CLASS_FOR)
	$(FC) $(FCOPT) -c $(PAIR_CLASS_FOR) -o $(PAIR_CLASS_OBJ)

$(VECTOR_CLASS_OBJ): $(POINT_CLASS_FOR) $(VECTOR_CLASS_FOR)
	$(FC) $(FCOPT) -c $(VECTOR_CLASS_FOR) -o $(VECTOR_CLASS_OBJ)

$(TUPLE_CLASS_OBJ): $(PAIR_CLASS_FOR) $(TUPLE_CLASS_FOR)
	$(FC) $(FCOPT) -c $(TUPLE_CLASS_FOR) -o $(TUPLE_CLASS_OBJ)

$(ENSEMBLE_CLASS_OBJ): $(POINT_CLASS_FOR) $(PAIR_CLASS_FOR) $(VECTOR_CLASS_FOR)\
		$(ENSEMBLE_CLASS_FOR)
	$(FC) $(FCOPT) -c $(ENSEMBLE_CLASS_FOR) -o $(ENSEMBLE_CLASS_OBJ)

$(TIME_COMPLEXITY_CLASS_OBJ): $(ENSEMBLE_CLASS_FOR) $(TIME_COMPLEXITY_CLASS_FOR)
	$(FC) $(FCOPT) -c $(TIME_COMPLEXITY_CLASS_FOR) -o $(TIME_COMPLEXITY_CLASS_OBJ)

$(IMPLEMENTATIONS_OBJ): $(ALGORITHMS_FOR) $(IMPLEMENTATIONS_FOR)
	$(FC) $(FCOPT) -c $(IMPLEMENTATIONS_FOR) -o $(IMPLEMENTATIONS_OBJ)

$(METHODS_POINT_CLASS_OBJ): $(POINT_CLASS_FOR) $(METHODS_POINT_CLASS_FOR)
	$(FC) $(FCOPT) -c $(METHODS_POINT_CLASS_FOR) -o $(METHODS_POINT_CLASS_OBJ)

$(METHODS_PAIR_CLASS_OBJ): $(POINT_CLASS_FOR) $(PAIR_CLASS_FOR) $(METHODS_PAIR_CLASS_FOR)
	$(FC) $(FCOPT) -c $(METHODS_PAIR_CLASS_FOR) -o $(METHODS_PAIR_CLASS_OBJ)

$(METHODS_VECTOR_CLASS_OBJ): $(POINT_CLASS_FOR) $(VECTOR_CLASS_FOR)\
		$(METHODS_VECTOR_CLASS_FOR)
	$(FC) $(FCOPT) -c $(METHODS_VECTOR_CLASS_FOR) -o $(METHODS_VECTOR_CLASS_OBJ)

$(METHODS_TUPLE_CLASS_OBJ): $(PAIR_CLASS_FOR) $(TUPLE_CLASS_FOR)\
		$(METHODS_TUPLE_CLASS_FOR)
	$(FC) $(FCOPT) -c $(METHODS_TUPLE_CLASS_FOR) -o $(METHODS_TUPLE_CLASS_OBJ)

$(METHODS_ENSEMBLE_CLASS_OBJ): $(POINT_CLASS_FOR) $(PAIR_CLASS_FOR) $(VECTOR_CLASS_FOR)\
		$(ENSEMBLE_CLASS_FOR) $(METHODS_ENSEMBLE_CLASS_FOR)
	$(FC) $(FCOPT) -c $(METHODS_ENSEMBLE_CLASS_FOR) -o $(METHODS_ENSEMBLE_CLASS_OBJ)

$(METHODS_TIME_COMPLEXITY_CLASS_OBJ): $(ENSEMBLE_CLASS_FOR)\
		$(TIME_COMPLEXITY_CLASS_FOR) $(METHODS_TIME_COMPLEXITY_CLASS_FOR)
	$(FC) $(FCOPT) -c $(METHODS_TIME_COMPLEXITY_CLASS_FOR) -o\
		$(METHODS_TIME_COMPLEXITY_CLASS_OBJ)

$(MAIN_OBJ): $(TIME_COMPLEXITY_CLASS_FOR) $(MAIN_FOR)
	$(FC) $(FCOPT) -c $(MAIN_FOR) -o $(MAIN_OBJ)

clean:
	/bin/rm -rf *.mod *.smod $(OBJECTS) $(TESTS)
