# clang compiler
CC = gcc

# options
CCOPT = -mavx2 -O2 -ftree-vectorize -fopt-info-optimized=opts.log
CCOPT = -mavx2 -O2 -ftree-vectorize -fopt-info-missed=missed-opts.log
CCOPT = -g -Wall -Wextra -O0

# libraries
LIBS = -lm

# sources
UTIL_SRC = util.c
POINT_SRC = point.c
TEST_SRC = test.c

# objects
UTIL_OBJ = util.o
POINT_OBJ = point.o
TEST_OBJ = test.o
OBJECTS = $(POINT_OBJ) $(UTIL_OBJ) $(TEST_OBJ)

# executables
TEST_BIN = test.bin
TESTS = $(TEST_BIN)
